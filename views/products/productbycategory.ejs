<img class="responsive-img" src="/images/cabecera-mano2.jpg">


<h2 class="center-align dark-grey-text"> <%= category %> </h2>
<div class="container">

  <% product.forEach((product) => { %>
<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-image" >
        <img src="<%= product.photo %>">
        <a href="/message/<%= product.creator._id %>/new" = class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">message</i></a>
      </div>
      <div class="card-content">
        <h4 class="card-title"> <%= product.name %> </h4>
        <p>Description: <%= product.description %> </p>
        <p>category: <%= product.category %> </p>
        <a class="green-text" href="/user/profile/<%= product.creator._id%>"><b><%= product.creator.username %></b></a>
      </div>
    </div>
  </div>
</div>
  <% }) %>

  </div>
