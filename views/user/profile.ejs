<img class="responsive-img" src="/images/cabecera-mano2.jpg" width="100%">
<div class="container">
  <h3 class=" fa fa-user center-align light-green-text"> My profile</h3><br>
  <ul class="collection">
    <li class="collection-item avatar">
      <img class="profilePicture" src="<%= user.pic_path %>" alt="<%= user.pic_name %>">
    </li>
    <li class="collection-item avatar">
      <p>Email: <br>
        <%= user.email %>
      </p>
    </li>
    <li class="collection-item avatar">
      <p>Username:<br>
        <%= user.username %>
      </p>
    </li>
    <li class="collection-item avatar">
      <p>Name:<br>
        <%= user.name %>
      </p>
    </li>
    <li class="collection-item avatar">
      <p>Last Name:<br>
        <%= user.lastname %>
      </p>
    </li>
    <li class="collection-item avatar">
      <p>Trust level:<br>
        <%= user.trustLevel %>
      </p>
    </li>
    <li class="collection-item avatar">
      <p>Latitude:<br>
        <%= user.latitude %>
      </p>
    </li>
    <li class="collection-item avatar">
      <p>Longitude:<br>
        <%= user.longitude %>
      </p>
    </li>
  </ul>

  <p>Location:</p>
  <div id="map"></div>
<br>
<h5 class="teal-text center-align">Stuff I can share:</h5>
<div class="container">
    <% products.forEach((product) => { %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card">
            <div class="card-image" >
              <img src="<%= product.photo %>">
               <a href="/product/<%=product._id%>/delete" = class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">delete</i></a>
            </div>
            <div class="card-content">
              <h4 class="card-title"> <%= product.name %> </h4>
              <p>Description: <%= product.description %> </p>
              <p>category: <%= product.category %> </p>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
</div>

<h5 class="teal-text center-align">Reviews:</h5>
  <% reviews.forEach((review) => { %>
<div class="row">
       <div class="col s12 m6">
         <div class="card blue-grey darken-1">
           <div class="card-content white-text">
             <span class="card-title"></span>
             <p><%= review.text %></p>
           </div>
           <div class="card-action">
             <p>Trust level:</p>
             <p>  <%= review.rating %></p>
           </div>
         </div>
       </div>
     </div>
     <% }) %>

  <div class="center-btn">
    <a href="../../user/<%= user._id %>/editUser" class="btn btn-success grey"><span class="fa fa-sign-in"></span>EDIT PROFILE</a><br></br>
  </div>
</div>

<script type="text/javascript">
var myUser = <%- JSON.stringify(user) %>;
</script>
