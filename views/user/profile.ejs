<!-- FALTA LOCALIZACION Y PRODUCTOS -->

<div class="container">
<h3 class=" fa fa-user center-align teal-text"> My profile</h3><br>
<ul class="collection">
  <li class="collection-item avatar">
    <img src="<%= user.image%>" width="50px" height="50px">
    </li>
  <li class="collection-item avatar">
    <p>Email: <br>
       <%= user.email %>
    </p>
  </li>
  <li class="collection-item avatar">
    <p>Username:<br>
       <%= user.username %>
    </p>
  </li>
</div>
</ul>
<br>
<h5 class="teal-text center-align">Reviews:</h5>
<div class="container">
    <ul class="collection">
    <% reviews.forEach((review) => { %>
      <li class="collection-item avatar">
        <p>Autor: <%= review.senderName %> </p>
        <p>Comment: <%= review.description %></p>
        <p>Rating: <%= review.rating %></p>
      </li>
      <% }) %>
        </ul>
  </div>
  <div class="container">
    <p>Offered goods:</p>

  </div>
 </div>
 <div class="container">
   <p>Location:</p>
 </div>
 <div class="container">
   <div class="center-btn">
     <a href="../../user/<%= user._id %>/editUser" class="btn btn-success"><span class="fa fa-sign-in"></span>EDITAR MI USUARIO</a><br></br>
</div>
</div>
</div>
