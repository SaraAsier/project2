<img class="responsive-img" src="/images/cabecera-mano2.jpg" width="100%">

<h2 class=" fa fa-user center-align"> My profile</h2><br>
<div class="container">
  <div class="row profile">
    <div class="col s12 m6">
      <div class="profile-userpic">
        <img src="<%= user.pic_path %>" class="img-responsive" alt="">
      </div>
    </div>

    <div class="col s12 m6">
      <ul class="collection">
        <li class="collection-item avatar">
          <h3><strong><%= user.username %></strong></h3>
        </li>
        <li class="collection-item avatar">
          <p><strong>Trust level </strong> <span class="btn-floating btn-large waves-effect amber"><%= user.trustLevel %></span>
          </p>
          <li class="collection-item avatar">
            <p><strong>Email: </strong><br>
              <%= user.email %>
            </p>
          </li>
          <li class="collection-item avatar">
            <p><strong>Name:</strong><br>
              <%= user.name %>
            </p>
          </li>
          <li class="collection-item avatar">
            <p><strong>Surname:</strong><br>
              <%= user.lastName %>
            </p>
          </li>

      </ul>
      <div class="container">
        <div class="center-btn">
          <a href="../../user/<%= user._id %>/editUser" class="btn btn-success grey"><span class="fa fa-sign-in"></span>EDIT PROFILE</a><br></br>
        </div>
        <div class="center-btn">
          <a href="/product/create" class="btn btn-success grey"><span class="fa fa-sign-in"></span>ADD NEW PRODUCT</a><br></br>
        </div>
      </div>
    </div>
  </div>
  <br>
  <hr>
  <br>
  <div class="row profile">
    <div class="col s12 m6">
      <h5 class="center-align">Reviews</h5>
      <% reviews.forEach((review) => { %>
        <div class="row">
          <div class="col s12 m6">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"></span>
                <p>
                  <%= review.text %>
                </p>
              </div>
              <div class="card-action">
                <p>Trust level:</p>
                <p>
                  <%= review.rating %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
    </div>

    <div class="col s12 m6">
      <h5 class="center-align">Location</h5>
      <div id="map"></div>
    </div>
  </div>
  <br>
  <hr>

  <h5 class="center-align">Stuff I can share</h5>
  <div class="row">
    <% products.forEach((product) => { %>
      <div class="col s12 m4">
        <div class="card">
          <div class="card-image">
            <img src="<%= product.photo %>">
            <a href="/product/<%=product._id%>/delete"=  class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">delete</i></a>
          </div>
          <div class="card-content">
            <h4 class="card-title"> <%= product.name %> </h4>
            <p>
              <%= product.description %>
            </p>
            <p>
              <%= product.category %>
            </p>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
</div>

<ul class="hide">
  <li class="collection-item avatar">
    <p>Latitude:<br>
      <%= user.latitude %>
    </p>
  </li>
  <li class="collection-item avatar">
    <p>Longitude:<br>
      <%= user.longitude %>
    </p>
  </li>
</ul>

<script type="text/javascript">
  var myUser = <%- JSON.stringify(user) %>;
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyApXzFjm59CO5m3ox-cr3w3AiiVnsBHzfQ&libraries=places"></script>
<script type="text/javascript" src="/javascripts/myMarker.js"></script>
